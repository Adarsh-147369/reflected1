# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adaptive_learning_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/keys
OPENAI_API_KEY=your_openrouter_api_key_here
OPENAI_MODEL=deepseek/deepseek-chat-v3.1:free

# Python SBERT Service
# URL for the SBERT evaluation service (Python Flask)
SBERT_SERVICE_URL=http://localhost:5001

# CORS Origin
# Frontend application URL
CORS_ORIGIN=http://localhost:3000

# Questions Configuration
# Path to questions directory (relative to project root or absolute path)
# If not specified, defaults to 'questions' directory at project root
# Examples:
#   QUESTIONS_DIRECTORY_PATH=questions (relative to project root)
#   QUESTIONS_DIRECTORY_PATH=../custom-questions (relative path)
#   QUESTIONS_DIRECTORY_PATH=/absolute/path/to/questions (absolute path)
QUESTIONS_DIRECTORY_PATH=questions
